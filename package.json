  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.2",
    "config": "^1.20.4",
    "danger": "^0.14.1",
    "debug": "^2.6.3",
    "ejs": "^2.4.2",
    "express": "^4.13.4",
    "jsonwebtoken": "^7.2.1",
    "mongodb": "^2.2.25",
    "node-fetch": "^1.6.3",
    "typescript": "2.2.1"
  },
  "engines": {
    "node": "7.2.1"
  },
  "devDependencies": {
    "@types/config": "^0.0.32",
    "@types/debug": "^0.0.29",
    "@types/ejs": "^2.3.33",
    "@types/express": "^4.0.34",
